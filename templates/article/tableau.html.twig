{% extends 'base.html.twig' %}

{% block title %}Hello Tableau !{% endblock %}

{% block body %}

{% set tableNb = triNb %}

    <h1>Tableaux</h1>

    <h2>Tableau de nombres aléatoires</h2>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="row">Nombres aléatoires : {{ tableNb|length }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {% for nb in tableNb %}
                <td>{{ nb }}</td>
            {% endfor %}
        </tr>
        </tbody>
    </table>
    </br>
    <h2>Tableau de strings</h2>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="row">Pays</th>
            <td>Légumes</td>
            <td>Voitures</td>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">Espagne</th>
            <td>Navet</td>
            <td>Nissan</td>
        </tr>
        <tr style="display:none">
            <th scope="row">Chili</th>
            <td>Haricot</td>
            <td>Toyota</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
